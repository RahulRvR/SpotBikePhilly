<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/searchBikeWindow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:padding="10dp">


    <SeekBar
        android:id="@+id/searchDistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/txtTotalDocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchDistance"
        android:background="@drawable/circle_button"
        android:padding="5dp"
        android:text="10 Docks within in 0.02 mi"
        android:textColor="?colorPrimary"
        app:fontFamily="roboto_slab"
        app:textWeight="light" />


    <Switch
        android:id="@+id/exploreAll"
        android:layout_below="@+id/searchDistance"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/icons" />

</RelativeLayout>