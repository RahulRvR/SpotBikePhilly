<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="150dp"
    sothree:umanoShadowHeight="4dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@drawable/progress_background"
            android:indeterminate="true" />

        <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MapsActivity"
        tools:layout="@layout/abc_activity_chooser_view" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="bottom"
        android:padding="10dp"
        android:visibility="gone"
        android:background="?attr/colorPrimary">

        <include layout="@layout/bike_info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.appyvet.rangebar.RangeBar xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:id="@+id/searchDistance"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            custom:barColor="@color/icons"
            custom:connectingLineColor="@color/icons"
            custom:pinColor="@color/icons"
            custom:rangeBar="false"
            custom:selectorColor="@color/icons"
            custom:textColor="@color/primary"
            custom:tickColor="@color/icons"
            custom:tickEnd="4.0"
            custom:tickInterval="0.2"
            custom:tickStart="0.0" />

        <TextView
            android:id="@+id/searchDistanceLabel"
            android:layout_below="@id/searchDistance"
            android:text="@string/label_serach_distance"
            android:textColor="@color/icons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>