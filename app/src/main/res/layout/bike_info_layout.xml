<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bikeInfoWindow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:background="?attr/colorPrimary">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/ic_maps_directions_walk"
        app:elevation="6dp"
        app:layout_anchor="@+id/toolbar"
        app:layout_anchorGravity="right"
        app:pressedTranslationZ="12dp" />



    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:text="1835 Market Street"
        android:textColor="@color/icons" />


    <TextView
        android:id="@+id/txtFreeDocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtAddress"
        android:background="@drawable/circle_button"
        android:gravity="center"
        android:padding="5dp"
        android:text="Free Docks : 23"
        android:textColor="?colorPrimary"
     />

    <TextView
        android:id="@+id/txtBikeAvl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAddress"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/txtFreeDocks"
        android:background="@drawable/circle_button"
        android:gravity="center"
        android:padding="5dp"
        android:text="Bikes : 0"
        android:textColor="?colorPrimary"
  />


</RelativeLayout>
